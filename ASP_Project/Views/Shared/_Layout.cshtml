<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP_Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="py-5 bg-black text-white-50">
        <div class="row g-4">
            <div class="col-lg-4">
                <h5 class="text-white mb-4">About Us</h5>
                <p>We build powerful tools that help businesses grow faster and work smarter.</p>
                <div class="d-flex gap-3 mt-4">
                    <a href="#" class="text-white-50"><i class="fab fa-twitter fs-5"></i></a>
                    <a href="#" class="text-white-50"><i class="fab fa-linkedin fs-5"></i></a>
                    <a href="#" class="text-white-50"><i class="fab fa-github fs-5"></i></a>
                </div>
            </div>
            <div class="col-6 col-md-3 col-lg-2">
                <h5 class="text-white mb-4">Product</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Features</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Pricing</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">API</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Integrations</a></li>
                </ul>
            </div>
            <div class="col-6 col-md-3 col-lg-2">
                <h5 class="text-white mb-4">Resources</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Documentation</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Guides</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Blog</a></li>
                    <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Support</a></li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-4">
                <h5 class="text-white mb-4">Newsletter</h5>
                <p>Subscribe to get product updates and industry insights.</p>
                <form class="mt-3">
                    <div class="input-group">
                        <input type="email" class="form-control bg-dark border-secondary text-white" placeholder="Your email">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
        <hr class="my-5 border-secondary">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <p class="mb-0">&copy; 2023 Your Company. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="#" class="text-white-50 text-decoration-none">Terms</a></li>
                    <li class="list-inline-item px-2">·</li>
                    <li class="list-inline-item"><a href="#" class="text-white-50 text-decoration-none">Privacy</a></li>
                    <li class="list-inline-item px-2">·</li>
                    <li class="list-inline-item"><a href="#" class="text-white-50 text-decoration-none">Cookies</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
